<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MerchantFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/merchantif_cardview1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/merchantif_const_cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchantif_fullname"
                android:layout_marginTop="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Ονοματεπώνυμο" />

            <ImageView
                android:id="@+id/merchantif_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:src="@drawable/merchant_img"
                app:layout_constraintTop_toBottomOf="@id/merchantif_fullname"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/merchantif_cardview2"
        app:layout_constraintTop_toBottomOf="@id/merchantif_cardview1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/merchantif_const_cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchantif_textview1_cardview2"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:text="Χαρακτηριστικά"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor = "@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/merchantif_id"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_textview1_cardview2"
                android:text="Id"/>

            <TextView
                android:id="@+id/merchantif_hint_id"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/merchantif_id"
                app:layout_constraintTop_toBottomOf="@id/merchantif_id"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Αναγνωριστικό"/>

            <TextView
                android:id="@+id/merchantif_phone"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_textview1_cardview2"
                android:text="Τηλέφωνο"/>

            <TextView
                android:id="@+id/merchantif_hint_phone"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/merchantif_phone"
                app:layout_constraintTop_toBottomOf="@id/merchantif_phone"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Έδρα"/>

            <TextView
                android:id="@+id/merchantif_surname"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_hint_id"
                android:text="Επίθετο"/>

            <TextView
                android:id="@+id/merchantif_hint_surname"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/merchantif_surname"
                app:layout_constraintTop_toBottomOf="@id/merchantif_surname"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Επίθετο"/>

            <TextView
                android:id="@+id/merchantif_name"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_hint_phone"
                android:text="Όνομα"/>

            <TextView
                android:id="@+id/merchantif_hint_name"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/merchantif_name"
                app:layout_constraintTop_toBottomOf="@id/merchantif_name"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Όνομα"/>

            <TextView
                android:id="@+id/merchantif_region"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_hint_surname"
                android:text="Περιοχή"/>

            <TextView
                android:id="@+id/merchantif_hint_region"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/merchantif_region"
                app:layout_constraintTop_toBottomOf="@id/merchantif_region"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Περιοχή"/>

            <TextView
                android:id="@+id/merchantif_address"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_hint_name"
                android:text="Διεύθυνση"/>

            <TextView
                android:id="@+id/merchantif_hint_mer_region"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/merchantif_address"
                app:layout_constraintTop_toBottomOf="@id/merchantif_address"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Διεύθυνση"/>

            <TextView
                android:id="@+id/merchantif_email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_hint_region"
                android:text="Email"/>

            <TextView
                android:id="@+id/merchantif_hint_email"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/merchantif_email"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Email"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/merchantif_editfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@id/merchantif_cardview2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0cbb06"
        app:borderWidth="0dp"
        android:clickable="true"
        app:rippleColor="@color/colorPrimary"
        app:srcCompat="@drawable/edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/merchantif_deletefab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@id/merchantif_cardview2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="150dp"
        android:backgroundTint="#FF0000"
        app:rippleColor="@color/colorAccent"
        android:clickable="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
