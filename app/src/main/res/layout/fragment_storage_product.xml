<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StorageProductFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/storageif_cardview1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/storageif_const_cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storageif_name"
                android:layout_marginTop="85px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Όνομα" />

            <ImageView
                android:id="@+id/storageif_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:src="@drawable/merchant_img"
                app:layout_constraintTop_toBottomOf="@id/storageif_name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/storageif_cardview2"
        app:layout_constraintTop_toBottomOf="@id/storageif_cardview1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/storageif_const_cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storageif_textview1_cardview2"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:text="Χαρακτηριστικά"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor = "@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/storageif_id"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_textview1_cardview2"
                android:text="Id"/>

            <TextView
                android:id="@+id/storageif_hint_id"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/storageif_id"
                app:layout_constraintTop_toBottomOf="@id/storageif_id"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Αναγνωριστικό"/>

            <TextView
                android:id="@+id/storageif_value"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_textview1_cardview2"
                android:text="Τιμή"/>

            <TextView
                android:id="@+id/storageif_hint_value"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/storageif_value"
                app:layout_constraintTop_toBottomOf="@id/storageif_value"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Τιμή"/>

            <TextView
                android:id="@+id/storageif_merchant"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_hint_id"
                android:text="Προμηθευτής"/>

            <TextView
                android:id="@+id/storageif_hint_merchant"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/storageif_merchant"
                app:layout_constraintTop_toBottomOf="@id/storageif_merchant"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Προμηθευτής"/>

            <TextView
                android:id="@+id/storageif_date"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_hint_value"
                android:text="Ημερομηνία"/>

            <TextView
                android:id="@+id/storageif_hint_date"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/storageif_date"
                app:layout_constraintTop_toBottomOf="@id/storageif_date"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Ημερομηνία Παραγωγής"/>

            <TextView
                android:id="@+id/storageif_category"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_hint_merchant"
                android:text="Κατηγορία"/>

            <TextView
                android:id="@+id/storageif_hint_category"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/storageif_category"
                app:layout_constraintTop_toBottomOf="@id/storageif_category"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Κατηγορία"/>

            <TextView
                android:id="@+id/storageif_catattr"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_hint_date"
                android:text="Εξτρα"/>

            <TextView
                android:id="@+id/storageif_hint_catattr"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/storageif_catattr"
                app:layout_constraintTop_toBottomOf="@id/storageif_catattr"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Έξτρα"/>

            <TextView
                android:id="@+id/storageif_stock"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/storageif_hint_category"
                android:text="Απόθεμα"/>

            <TextView
                android:id="@+id/storageif_hint_stock"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/storageif_stock"
                app:layout_constraintRight_toRightOf="@id/storageif_stock"
                app:layout_constraintTop_toBottomOf="@id/storageif_stock"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Απόθεμα"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/storageif_editfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@id/storageif_cardview2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0cbb06"
        app:borderWidth="0dp"
        android:clickable="true"
        app:rippleColor="@color/colorPrimary"
        app:srcCompat="@drawable/edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/storageif_deletefab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@id/storageif_cardview2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="150dp"
        android:backgroundTint="#FF0000"
        app:rippleColor="#000000"
        android:clickable="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
