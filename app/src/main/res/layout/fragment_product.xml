<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".Fragments.Product.ProductFragment"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/prodif_cardview1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prodif_const_cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prodif_name"
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/hello_blank_fragment" />

        <ImageView
            android:id="@+id/prodif_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/prodif_name"/>

        <TextView
            android:id="@+id/prodif_price"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_width="180dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/prodif_img"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffff"
            android:text="50"
            android:textStyle="bold"
            android:textSize="35sp"
            />


        <TextView
            android:id="@+id/prodif_status"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prodif_img"
            android:text="Άμεσα Διαθέσιμο"/>

        <TextView
            android:id="@+id/prodif_hint_status"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/prodif_status"
            app:layout_constraintTop_toBottomOf="@id/prodif_status"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:text="Κατάσταση Προιόντος"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/prodif_cardview2"
        app:layout_constraintTop_toBottomOf="@id/prodif_cardview1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/prodif_const_cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prodif_textview1_cardview2"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:text="Χαρακτηριστικά"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor = "@color/colorPrimaryDark"/>

            <TextView
            android:id="@+id/prodif_cat"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prodif_textview1_cardview2"
            android:text="Κρεατικά"/>

            <TextView
                android:id="@+id/prodif_hint_cat"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/prodif_cat"
                app:layout_constraintTop_toBottomOf="@id/prodif_cat"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Κατηγορία"/>

            <TextView
                android:id="@+id/prodif_mer_name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prodif_textview1_cardview2"
                android:text="Τρίχας"/>

            <TextView
                android:id="@+id/prodif_hint_mer_name"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/prodif_mer_name"
                app:layout_constraintTop_toBottomOf="@id/prodif_mer_name"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Προμηθευτής"/>

            <TextView
                android:id="@+id/prodif_cat_attr"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prodif_hint_cat"
                android:text="Κεφάλι"/>

            <TextView
                android:id="@+id/prodif_hint_cat_attr"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/prodif_cat_attr"
                app:layout_constraintTop_toBottomOf="@id/prodif_cat_attr"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Μέρος Κρέατος"/>

            <TextView
                android:id="@+id/prodif_mer_phone"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prodif_hint_mer_name"
                android:text="0123456789"/>

            <TextView
                android:id="@+id/prodif_hint_mer_phone"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/prodif_mer_phone"
                app:layout_constraintTop_toBottomOf="@id/prodif_mer_phone"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Τηλέφωνο"/>

            <TextView
                android:id="@+id/prodif_date"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prodif_hint_cat_attr"
                android:text="01/02/2020"/>

            <TextView
                android:id="@+id/prodif_hint_date"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/prodif_date"
                app:layout_constraintTop_toBottomOf="@id/prodif_date"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Ημερομηνία Παραγωγής"/>

            <TextView
                android:id="@+id/prodif_mer_region"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prodif_hint_mer_phone"
                android:text="Χανιά"/>

            <TextView
                android:id="@+id/prodif_hint_mer_region"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/prodif_mer_region"
                app:layout_constraintTop_toBottomOf="@id/prodif_mer_region"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Έδρα"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@id/prodif_cardview2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/add_cart" />

</androidx.constraintlayout.widget.ConstraintLayout>
